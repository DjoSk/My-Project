<Window x:Class="Atelier_des_Mots.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atelier des Mots" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="D:/Project1/Atelier des Mots/Views/Resources/Images/BackgroundWordsFlying.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Choose Exercise Type" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Buttons to select exercise type -->
            <Button Content="Syllables Only Exercise" Click="SyllablesOnlyExercise_Click" Width="200" Margin="10"/>

            <Button Content="Syllables Word Exercise" Click="SyllablesExercise_Click" Width="200" Margin="10"/>
            <Button Content="Disordered Phrase Exercise" Click="DisorderedPhraseExercise_Click" Width="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
