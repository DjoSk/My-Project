<Window x:Class="Atelier_des_Mots.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atelier des Mots" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Atelier des Mots;component/Views/Resources/Images/principal.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Choisissez le type d'exercice" FontSize="35" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Buttons to select exercise type -->
            <Button Content="exercice sur les syllabes seulement" Click="SyllablesOnlyExercise_Click" Width="300" Margin="10"/>

            <Button Content="Exercice sur les mots syllabiques" Click="SyllablesExercise_Click" Width="300" Margin="10"/>
            <Button Content="Exercice sur les phrases désordonnées" Click="DisorderedPhraseExercise_Click" Width="300" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
