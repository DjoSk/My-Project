<Window x:Class="Atelier_des_Mots.Views.SyllableExercisePreparationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercice de préparation des syllabes" Height="450" Width="800">
    <Grid>
        <!-- Remove the Background attribute here, and only keep the Grid.Background section -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Atelier des Mots;component/Views/Resources/Images/Class.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <StackPanel Margin="20">
            <TextBlock Text="Entrez les mots en syllabes (séparés par des tirets):" FontSize="16" Margin="0,0,0,10"/>
            <TextBox Name="SyllableInput" FontSize="16" Margin="0,0,0,10" TextChanged="SyllableInput_TextChanged"/>
            <TextBlock Text="Mots (sans tirets):" FontSize="16" Margin="0,20,0,10"/>
            <TextBox Name="WordOutput" FontSize="16" Margin="0,0,0,10" IsReadOnly="True"/>

            <!-- Display to Students Button -->
            <Button Content="Affichage aux étudiants" Click="DisplayToStudents_Click" Width="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
